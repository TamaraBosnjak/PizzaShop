@using PizzaShop.ViewModels
@using PizzaShop.Models
@model Pizza

<div class="col">
    <div class="card pizza-card">
        <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="@Model.Name" />
        <div class="card-body pizza-button">
            <h3 class="text-start">
                @Model.Name
            </h3>
            <p class="card-text">@Model.ShortDescription</p>
            <a asp-controller="Pizza"
                asp-action="Details"
                asp-route-id="@Model.ID" class="btn btn-primary">Pogledaj detalje</a>
            <div class="row mt-2">
                <div class="d-flex justify-content-between col-md-5 col-5">
                    <div class="input-group mb-3">
                        <a class="input-group-text text-decoration-none" value="">+</a>
                        <input type="text" class="form-control text-center" value="1">
                        <a class="input-group-text text-decoration-none" value="">-</a>
                    </div>
                </div>
                <div class="col d-flex justify-content-end" style="height:fit-content">
                    <h4 class="d-grid">
                        <a class="btn btn-secondary"
                            asp-controller="ShoppingCart"
                            asp-action="AddToShoppingCart"
                            asp-route-pizzaId="@Model.ID"> + Add to cart</a>
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>
