@using PizzaShop.ViewModels
@using PizzaShop.Models
@model ShoppingCartViewModel

<h3 class="my-5">
    Shopping cart
</h3>
<div>
    <a class="btn btn-danger"
       asp-controller="ShoppingCart"
       asp-action="RemoveAllFromCart"> - Remove all</a>
</div>

<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@line.Pizza.ImageThumbnailUrl" class="img-fluid rounded-start p-2" alt="@line.Pizza.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@line.Amount x @line.Pizza.Name</h5>
                            <div class="d-flex justify-content-between">
                                <h6>@line.Pizza.ShortDescription</h6>
                                <h2>@line.Pizza.Price.ToString("c")</h2>
                                <a class="btn btn-danger"
                                   asp-controller="ShoppingCart"
                                   asp-action="RemoveFromShoppingCart"
                                   asp-route-pizzaid="@line.Pizza.ID"> - Remove from cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 class="col">Total:</h4>
                <h4 class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr />
        </div>
    </div>
</div>