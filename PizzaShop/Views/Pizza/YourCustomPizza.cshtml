@using PizzaShop.ViewModels;
@model UserCustomPizzaViewModel

<form asp-action="SavePizza" asp-controller="Pizza" method="post" role="form">
    <h3 class="my-5">
        Koje sastojke želite na vašoj pici?
    </h3>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-6">
        <div class="row g-2">
            <div class="col-12">
                <label asp-for="PizzaName" class="form-label"></label>
                <input asp-for="PizzaName" class="form-control" />
                <span asp-validation-for="PizzaName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Ingredients" class="form-label"></label>
                <input asp-for="Ingredients" class="form-control" />
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <p>Sunka, Pecenica, Pelat, Sir, Masline, Pecurke, Jaje, Kukuruz, Paprika, Brokoli</p>
            <div class="mt-3">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-secondary" value="Sacuvaj picu" />
                </div>
            </div>
        </div>
    </div>
</form>