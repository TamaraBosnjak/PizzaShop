@using PizzaShop.ViewModels;

@model HomeViewModel

<partial name="_Carousel" />

    <nav aria-label="breadcrumb" class="my-3 ms-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Početna</li>
        </ol>
    </nav>

<partial name="_History" />

    <div class="row pizzas-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach(var pizza in Model.PizzasOfTheWeek)
        {
            <partial name="_PizzaCard" model="pizza" /> 
        }
        </div> 
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
