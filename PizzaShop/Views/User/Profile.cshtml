@using PizzaShop.ViewModels;
@model UpdateUserViewModel

<h3 class="mt-5">Dobrodosao @Model.UserName</h3>
<form asp-controller="User" asp-action="ChangeProfile" method="post" role="form">
    <h3 class="my-5">
        Izmenite vaše podatke za registraciju
    </h3>

    @Html.HiddenFor(m => m.ID)
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3></h3>
    <div class="col-6">
        <div class="row g-2">
            <div class="col-12">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" disabled />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="CurrentPassword" class="form-label"></label>
                <input asp-for="CurrentPassword" type = "password" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-secondary" value="Izmeni podatke" />
                </div>
            </div>
        </div>
    </div>
</form>